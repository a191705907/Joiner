<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="joiner.entity">
    <class name="Link" table="student_activity">
        <composite-id><!--联合主键，student_activity表中的主键为(student_id, activity_id)-->
            <key-property name="studentId" column="student_id"></key-property>
            <key-property name="activityId" column="activity_id"></key-property>
        </composite-id>
    </class>
</hibernate-mapping>